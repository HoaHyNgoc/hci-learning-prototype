<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:weightSum="9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMainBackground">
        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="7"
                android:layout_margin="10dp"
                android:background="@color/colorMainBackground"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center">
            <ImageView
                    android:src="@mipmap/ic_menu"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
            </ImageView>
            <TextView
                    android:layout_weight="6"
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/colorTitleOutcome1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/title_outcome_1">

            </TextView>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorMainBackground"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <TextView
                    android:layout_weight="1"
                    android:text="Suggestion for you"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <ImageButton
                        android:id="@+id/imgBtnAge6"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/ic_6age"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                <ImageButton
                        android:id="@+id/imgBtnAge12"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/ic_12age"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                <ImageButton
                        android:id="@+id/imgBtnAge18"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/ic_18age"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_weight="7"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvMovie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>